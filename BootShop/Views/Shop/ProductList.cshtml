@using BootShop.Models;

@{
    Layout = "~/Views/Shop/Shared/_Layout.cshtml";
}

<div class="text-container">
    <p class="red-text">Naše&nbsp;</p>
    <p class="blue-text">nabídka</p>
</div>

<div class="divider"></div>
<form method="get">
<div data-role="main" class="ui-content">
    <h1>@ViewBag.Test</h1>
    <h3>Filtrovat podle:</h3>
    <select name="filterBy">
            <option value="">Nefiltrovat</option>
            <option value="price">Ceny</option>
            <option value="category">Kategorie</option>
            <option value="both">Obojí</option>
    </select>
        <input type="submit" value="Filtrovat">

    <h3>Cena</h3>
    <div data-role="rangeslider">
        <label for="price-min">Cena:</label>
        <input type="range" name="priceMin" id="price-min" value="@ViewBag.PriceMin" min="@ViewBag.PriceMin" max="@ViewBag.PriceMax">
        <label for="price-max"></label>
        <input type="range" name="priceMax" id="price-max" value="@ViewBag.PriceMax" min="@ViewBag.PriceMin" max="@ViewBag.PriceMax">
    </div>
</div>
</div>

<div class="category-select-container">
<h3>Kategorie</h3>
<select name="categoryId" class="category-select">
    <option value="">Vyberte kategorii</option>
      @foreach (Category category in ViewBag.Categories)
    {
        <option value="@category.Id">@category.Name</option>
    }
</select>
</div>

<h3>Seřadit produkty</h3>
<select name=orderBy>
    <option value="">Doporučené</option>
    <option value="price">Cena vzestupně</option>
    <option value="name">Název vzestupně</option>
</select>
<input type="submit" value="Seřadit">
</form>

<div class="new-stock-container">
    @foreach (ProductVariant productVariant in ViewBag.ProductVariants)
    {
    <a href="@Url.RouteUrl(" ProductDetail", new {id = @productVariant.Id})" class="new-stock-boots"
    style="text-decoration:none;">
    <img src="images/@productVariant.Product.PrimaryImageFilename" height="280" width="250">
    <p class="new-stock-boots-text new-stock-text-margin">@productVariant.Product.Name</p>
    <div class="price-container">
        <p class="text-price">@productVariant.PriceDiscount Kč</p>
        <p class="old-price">@productVariant.Price Kč</p>
    </div>
    </a>
    }
</div>

<style>

    .category-select-container{
        width: 300px;
        height: 50px;
        margin-bottom: 100px;
    }

    .category-select{
        margin: 0;
    }

    .category-filter{
        margin-left: 120px;
        margin-bottom: 100px;
    }

    .category-filter button{
        margin: 0;
    }

    .category-filter .dropdown-content{
        margin: 0;
    }

    .hr-divider{
        margin-left: 120px;
        margin-right: 120px;
    }

    form {
        margin-left: 105px;
        width: 500px;
    }

    .dropbtn {
        background-color: light-gray;
        color: black;
        padding: 16px;
        font-size: 16px;
        border: none;
        margin-left: 120px;
        width: 200px;
    }

    .dropdown {
        position: relative;
        display: inline-block;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
        margin-left: 120px;
    }

    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
    }

    .dropdown-content a:hover {
        background-color: #ddd;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .dropdown:hover .dropbtn {
        background-color: #ddd;
    }
</style>