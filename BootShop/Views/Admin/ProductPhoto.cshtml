@using BootShop.Models;

@{
    Layout = "/Views/Admin/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Produkty</h1>
            <table class="table table-striped table-hover">
                <tr>
                    <th>ID</th>
                    <th>Produkt</th>
                    <th>Název souboru</th>
                    <th>Náhled</th>
                    <th></th>
                </tr>
                @{
                    foreach (ProductPhoto productPhoto in ViewBag.ProductPhotos)
                    {
                        <tr>
                            <td>@productPhoto.Id</td>
                            <td>@productPhoto.Product.Name</td>
                            <td>@productPhoto.Filename</td>
                            <td><img src="../../productImages/@productPhoto.Filename" height="60"></td>
                            <td class="text-nowrap">
                                <a href="@Url.RouteUrl("ProductPhotoDelete", new {id = productPhoto.Id})" class="btn btn-danger">Smazat</a>
                            </td>
                        </tr>
                    }
                }
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <form method="post" class="well" runat="server" EncType="multipart/form-data">
                <div class="form-group">
                    <label for="¨product">Produkt</label>
                    <select name="productId" id="product" class="form-control" required>
                        <option value="">---</option>
                        @{
                            foreach (Product product in ViewBag.Products)
                            {
                                <option value="@product.Id">@product.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="file" class="form-control" name="image" />
                </div>

                <button type="submit" class="btn btn-primary">Přidat obrázek produktu</button>
            </form>

        </div>
    </div>

</div>
