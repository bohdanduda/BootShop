@using BootShop.Models;

@{
    Layout = "/Views/Admin/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Podkategorie</h1>
            <table class="table table-striped table-hover">
                <tr>
                    <th>ID</th>
                    <th>Název</th>
                    <th>Kategorie</th>
                </tr>
                <tr>
                    <td>@ViewBag.subcategory.Id</td>
                    <td>@ViewBag.subcategory.Name</td>
                    <td>@ViewBag.subcategory.Category.Name</td>
                </tr>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-4">
            <form method="post" class="well">
                <input name="categoryId" value="@ViewBag.subcategory.CategoryId" hidden="hidden"></input>
                <div class="form-group">
                    <label for="name">Název</label>
                    <input name="name" id="name" type="text" class="form-control" placeholder="Zadejte název" required></input>
                </div>
                <button type="submit" class="btn btn-primary">Upravit podkategorii</button>
            </form>
        </div>
    </div>
</div>